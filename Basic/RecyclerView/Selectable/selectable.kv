<SelectableItem>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: root.title
        font_size: 32

<MainScreen>:
    orientation: 'vertical'
    Label:
        text: 'Selectable Item List'
        font_size: 32

    ItemList:
        viewclass: 'SelectableItem'
        SelectableRecycleBoxLayout:
            default_size: None, dp(65)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            multiselect: True
            touch_multiselect: True